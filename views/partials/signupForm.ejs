<div class="registration-form">
    <form action="/signup" method="POST">
        <div class="form-group">
            <label for="username" >Username</label>
            <input id="username" class="form-control" type="text" class="validate" name="username" required>
        </div>
        <div class="form-group">
            <label for="password" >Password</label>
            <input id="password" class="form-control" type="password" class="validate" name="password" required/>
        </div>
        <button class="btn" type="submit" name="action" id="submit-btn">Signup
            <i class="fa fa-user-plus"></i>
        </button>
    </form>
</div>