<form action = '/image/create' method = 'POST' enctype="multipart/form-data">
    <div class="form-group">
        <label for = "albumName">Album Name</label>
        <input type="text" class="form-control-plaintext" name='albumName' value="<%=albumName%>" readonly/>
    </div>
    <div class="form-group">
        <label for='image'>Image</label>
        <input class="form-control-file" name="image" type="file" />
    </div>
    <div class="form-group">
        <label for='comment'>Image Description</label>
        <input class="form-control" type='text' name='comment' placeholder="Enter Image description" required/>
    </div>
    <div class="form-group">
        <button class="btn" type="submit" id="create-btn">Create New Image</button>
    </div>
</form>