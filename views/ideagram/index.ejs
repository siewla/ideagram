<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/styles/mainpage.css">
</head>
<body>
    <% if (currentUser) { %>
        <div class = 'center-the-form'>
            <div id="registration-card">
            <img id="registration-logo" src="/assets/images/ideagramlogo.png">
            <h3 id="welcome-text">Welcome to Ideagram</h3>
            <h4 id="tagline-text"><%= currentUser.username %>!</h4>
            <a class="btn" href="/dashboard" id="dashboard-btn">Go to Main Dashboard
                <i class="fa fa-desktop"></i></a>
            <form action="/logout?_method=DELETE" method="post">
            <button class="btn" id="logout-btn">Logout
                <i class="fa fa-sign-out"></i></button>
            </form>
        </div>
    <% } else { %>
    <div class = 'center-the-form'>
        <div id="registration-card">
        <img id="registration-logo" src="/assets/images/ideagramlogo.png">
        <h3 id="welcome-text">Welcome to Ideagram</h3>
        <h4 id="tagline-text">Find new ideas to try</h4>
        <br>
        <div class="buttons">
            <a class="btn" href="/login" id="login-btn">LOGIN
                <i class="fa fa-sign-in"></i></a>
            <a class="btn" href="/signup" id="signup-btn">SIGNUP
                <i class="fa fa-user-plus"></i></a>
        </div>
        </div>
    </div>
    <% } %>
</body>
</html>